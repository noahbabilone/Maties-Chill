                                        <i class="icon-pencil"></i>Modifier Profile </a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_change_password') }}">
                                        <i class="icon-key"></i>Mot de passe
                                    </a>
                                </li>

                                {% if is_granted('ROLE_ADMIN') %}

                                    <li>
                                        <a href="{{ path('dashboard') }}">
                                            <i class="icon-rocket"></i>Admin
