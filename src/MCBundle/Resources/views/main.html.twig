                        <li class="dropdown dropdown-quick-sidebar-toggler">
                            <a href="{{ path('fos_user_security_logout') }}" class="dropdown-toggle">
                                <i class="icon-logout"></i></span>
                            </a>
                        </li>
                    {% else %}
                        <li class=""><a href="{{ path('fos_user_security_login') }}" title="Connexion">
                                <i class="icon-login "></i> Connexion </a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}"
                               title="S'inscrire">
                                <i class="icon-plus"></i>
                                <span class="username username-hide-on-mobile">Inscription</span>
                            </a>

                        </li>

                    {% endif %}


                </ul>
            </div>
        </div>
