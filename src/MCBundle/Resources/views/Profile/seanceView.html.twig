{% extends "MCBundle::main.html.twig" %}{% block title %}    Films - {{ parent() }}{% endblock %}{% block stylesheets %}    {{ parent() }}    {% stylesheets    'https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css'    'bundles/mc/css/jquery.rateyo.css'    'bundles/mc/css/card.css'    'bundles/mc/themes/global/plugins/cubeportfolio/css/cubeportfolio.css'    'bundles/mc/themes/pages/css/portfolio.min.css'    filter='cssrewrite' %}    <link rel="stylesheet" href="{{ asset_url }}"/>    {% endstylesheets %}{% endblock %}{% block body_mc %}    <div class="page-container page-mc">        <div class="page-content">            <div class="page-bar">                <div class="row">                    <div class="col-sm-12">                        <ul class="page-breadcrumb">                            <li>                                <a href="{{ path('home_page') }}">Accueil</a>                                <i class="fa fa-circle"></i>                            </li>                            <li>                                <a href="{{ path('fos_user_profile_show') }}">Profile</a>                                <i class="fa fa-circle"></i>                            </li>                            <li>                                <a href="{{ path('user_seances') }}">Séances</a>                                <i class="fa fa-circle"></i>                            </li>                            {% if results is defined and results[0].seance is defined %}                                <li>                                    <span>{{ results[0].seance.film.title | capitalize }}                                        de {{  results[0].seance.creator.username | capitalize }}</span>                                </li>                            {% else %}                                <li>Aucun film trouvé</li>                            {% endif %}                        </ul>                    </div>                </div>            </div>            <!-- END PAGE BAR -->            <!-- BEGIN PAGE TITLE-->            <div class="row">                <div class="col-sm-2">                    {% include("MCBundle:Includes:submenu.seance.html.twig") %}                </div>                <div class="col-sm-10">                    <div class="row">                        {% if results is defined and results %}                        {% for result in results %}                            <div class="col-sm-12">                                <h3 class="page-title page-header">                                    Séance                                    <small> {{ result.seance.film.title | capitalize }}                                        - {{ result.seance.typeView | upper }}                                        - {{ result.seance.creator.username | capitalize }} </small>                                </h3>                            </div>                            <div class="col-sm-9">                                {% if  result.seance.film.title is defined %}                                    <h3 class="page-title font-green sbold uppercase">{{ result.seance.film.title }}                                        - {{ result.seance.typeView }}</h3>                                {% endif %}                                <div class="profile">                                    <div class="tabbable-line tabbable-full-width">                                        <ul class="nav nav-tabs">                                            <li class="active">                                                <a href="#seance_info" data-toggle="tab"> Séance </a>                                            </li>                                            <li>                                                <a href="#film_info" data-toggle="tab"> Film </a>                                            </li>                                        </ul>                                        <div class="tab-content">                                            <div class="tab-pane active" id="seance_info">                                                <div class="table-scrollable table-scrollable-borderless">                                                    <table class="table table-hover table-light">                                                        {% if result.seance.creator is defined and result.seance.creator %}                                                            <tr>                                                                <td class="">Proposé(e) par:</td>                                                                <td class="">{{ result.seance.creator.username | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.date is defined and result.seance.date %}                                                            <tr>                                                                <td class="col-sm-2">Durée</td>                                                                <td class="col-sm-9">                                                                    {{ result.seance.date| date("d F") }}                                                                    à {{ result.seance.date| date("H") }}                                                                    h {{ result.seance.date| date("i") }}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.address.town is defined and result.seance.address.town %}                                                            <tr>                                                                <td class="col-sm-2">Ville</td>                                                                <td class="col-sm-9">{{ result.seance.address.town | capitalize }}                                                                    {% if result.seance.address.postCode is defined and result.seance.address.postCode %}                                                                        ({{ result.seance.address.postCode }})                                                                    {% endif %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.film.directors is defined and result.seance.film.directors %}                                                            <tr>                                                                <td class="col-sm-2">Réalisateur</td>                                                                <td class="col-sm-9">{{ result.seance.film.directors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.price is defined and result.seance.price %}                                                            <tr>                                                                <td class="col-sm-2">Prix</td>                                                                <td class="col-sm-9">                                                                    {% if result.seance.price > 0 %}{{ result.seance.price }}€{% else %}Gratuit{% endif %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.contribution is defined and result.seance.contribution %}                                                            <tr>                                                                <td class="col-sm-2">Avec contribution</td>                                                                <td class="col-sm-9">{{ result.seance.contribution | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.maxPlace is defined and result.seance.maxPlace %}                                                            <tr>                                                                <td class="col-sm-2">Place(s) Rts</td>                                                                <td class="col-sm-9">{{ result.seance.maxPlace }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.participants is defined and result.participants %}                                                            <tr>                                                                <td class="col-sm-2">Participant(s)</td>                                                                <td class="col-sm-9">{{ result.participants }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.material is defined and result.seance.material %}                                                            <tr>                                                                <td class="col-sm-2">Autre</td>                                                                <td class="col-sm-9">                                                                    {% for material in result.seance.material %}                                                                        {{ material.title }}                                                                        {% if loop.index < result.seance.material | length %}/{% endif %}                                                                    {% endfor %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.description is defined and result.seance.description %}                                                            <tr>                                                                <td class="col-sm-2">Autre</td>                                                                <td class="col-sm-9">{{ result.seance.description | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                    </table>                                                </div>                                            </div>                                            <div class="tab-pane" id="film_info">                                                <div class="table-scrollable table-scrollable-borderless">                                                    <table class="table table-hover table-light">                                                        {% if result.seance.film.releaseDate is defined and result.seance.film.releaseDate %}                                                            <tr>                                                                <td class="">Date de sortie</td>                                                                <td class="">{{ result.seance.film.releaseDate | date("d F Y") }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.film.runtime is defined and result.seance.film.runtime %}                                                            <tr>                                                                <td class="col-sm-2">Durée</td>                                                                <td class="col-sm-9">                                                                    {{ result.seance.film.runtime | date("g") }}                                                                    h {{ result.seance.film.runtime | date("i") }}min                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.film.nationality is defined and result.seance.film.nationality %}                                                            <tr>                                                                <td class="col-sm-2">Nationalité</td>                                                                <td class="col-sm-9">{{ result.seance.film.nationality | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if result.seance.film.directors is defined and result.seance.film.directors %}                                                            <tr>                                                                <td class="col-sm-2">Réalisateur</td>                                                                <td class="col-sm-9">{{ result.seance.film.directors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if  result.seance.film.actors is defined and result.seance.film.actors %}                                                            <tr>                                                                <td class="col-sm-2">Avec</td>                                                                <td class="col-sm-9">{{ result.seance.film.actors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if  result.seance.film.genre is defined and result.seance.film.genre %}                                                            <tr>                                                                <td class="col-sm-2">Genre(s)</td>                                                                <td class="col-sm-9">                                                                    {% for genre in result.seance.film.genre %}                                                                        {{ genre.title }}                                                                        {% if loop.index < result.seance.film.genre |length %}/{% endif %}                                                                    {% endfor %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if  result.seance.film.pressRating is defined and result.seance.film.pressRating %}                                                            <tr>                                                                <td class="col-sm-2">Notes Presses</td>                                                                <td class="col-sm-9">                                                    <span id="pressRating"                                                          data-rating="{{ result.seance.film.pressRating | round(1, 'floor') }}">{{ result.seance.film.pressRating | round(1, 'floor') }}</span>                                                                </td>                                                            </tr>                                                            {#<input class="kv-svg rating-loading"#}                                                            {#value="{{ result.seance.film.pressRating | round(1, 'floor') }}"#}                                                            {#data-size="xs" title="Notes Presses">#}                                                        {% endif %}                                                        {% if  result.seance.film.userRating is defined and result.seance.film.userRating %}                                                            <tr>                                                                <td class="col-sm-2">Notes Spetacteurs</td>                                                                <td class="col-sm-9">                                                    <span id="userRating"                                                          data-rating="{{ result.seance.film.userRating | round(1, 'floor') }}">{{ result.seance.film.userRating | round(1, 'floor') }}</span>                                                                </td>                                                            </tr>                                                        {% endif %}                                                    </table>                                                </div>                                            </div>                                        </div>                                    </div>                                </div>                                {% if  result.seance.film.synopsis is defined %}                                    <h3 class="caption font-yellow-casablanca sbold">Synopsis</h3>                                    <p class="">{{ result.seance.film.synopsis | capitalize }}</p>                                {% endif %}                                <ul class="list-inline">                                    {% if  result.seance.creator is defined and result.seance.creator %}                                        <li>                                            <i class="fa fa-user"></i> {{ result.seance.creator.username | capitalize }}                                        </li>                                    {% endif %}                                    {% if  result.seance.date is defined and result.seance.date %}                                        <li>                                            <i class="fa fa-calendar"></i> {{ result.seance.date | date("d F") }}                                        </li>                                        <li>                                            <i class="fa fa-clock-o"></i> {{ result.seance.date| date("H") }}                                            h{{ result.seance.date| date("i") }}                                        </li>                                    {% endif %}                                    {% if  result.seance.address.town is defined and result.seance.address.town %}                                        <li>                                            <i class="fa fa-map-marker"></i>                                            {{ result.seance.address.town }}                                            {% if  result.seance.address.postCode is defined and result.seance.address.postCode %}                                                ({{ result.seance.address.postCode }})                                            {% endif %}                                        </li>                                    {% endif %}                                    {% if  result.participants is defined and result.participants %}                                        <li>                                            <i class="fa fa-heart"></i>                                            {{ result.participants | length }}                                        </li>                                    {% endif %}                                    {% if  result.seance.film.userRating is defined and result.seance.film.pressRating %}                                        <li>                                            <i class="fa fa-star"></i>                                            {% set rating = (result.seance.film.userRating+ result.seance.film.pressRating)/2 %}                                            {{ rating | round(1, 'floor') }}                                        </li>                                    {% endif %}                                    {% if  result.seance.address.town is defined and result.seance.address.town %}                                        <li>                                            <i class="fa fa-shopping-cart"></i>                                            {{ result.seance.price }}<i class="fa fa-eur"></i>                                        </li>                                    {% endif %}                                </ul>                                {% if participants is defined and participants %}                                                                        <h3 class="page-header caption font-yellow-casablanca sbold">Participant(s)</h3>                                    <div class="table-scrollable table-scrollable-borderless">                                        <table class="table table-hover table-light">                                            <thead>                                            <tr>                                                <th>Nom</th>                                                <th>Note(s)</th>                                                <th>Actions</th>                                            </tr>                                            </thead>                                            <tbody>                                            {% for participant in participants %}                                                <tr>                                                    <td class="col-sm-8">{{ participant.user.username | capitalize }}</td>                                                    {% set rand=  random(5) %}                                                    <td class="col-sm-2">                                                    <span class="profileRating"                                                          data-rating="{{ rand }}">{{ rand }}</span>                                                    </td>                                                    <td class="col-sm-1">                                                        <a href="#" class="font-red" title="Supprimer"> <i                                                                    class="fa fa-remove fa-fw"></i></a>                                                    </td>                                                </tr>                                            {% else %}                                                <tr>                                                    <td colspan="3"> Aucun participant</td>                                                </tr>                                            {% endfor %}                                            </tbody>                                        </table>                                    </div>                                {% endif %}                            </div>                            <div class="col-sm-3">                                <div id="js-grid-juicy-projects" class="cbp">                                    <div class="cbp-item graphic">                                        {% if  result.seance.film.poster is defined and result.seance.film.poster %}                                            <a href="{{ result.seance.film.poster }}" class="cbp-lightbox">                                                <img src="{{ result.seance.film.poster }}"                                                     class="img-responsive pic-bordered thumbnail margin-right "                                                     alt=""/>                                            </a>                                        {% else %}                                            <img src="../../../uploads/images/400x300.png"                                                 class="img-responsive pic-bordered"                                                 alt="{{ result.seance.film.title }}">                                        {% endif %}                                        <div class="btn-group btn-group btn-group-justified magin-bottom-30">                                            <a href="http://vimeo.com/14912890"                                               class="cbp-lightbox cbp-l-caption-buttonRight btn green-meadow btn-sm "                                               data-title="{{ result.seance.film.title }}">                                                <i class="fa fa-edit fa-fw"></i> Editer </a>                                            <a href="http://vimeo.com/14912890"                                               class="cbp-lightbox cbp-l-caption-buttonRight btn red btn-sm "                                               data-title="{{ result.seance.film.title }}">                                                <i class="fa fa-trash fa-fw"></i> Supprimer </a>                                        </div>                                        <div class="btn-group btn-group btn-group-justified">                                            <a href="http://vimeo.com/14912890"                                               class="cbp-lightbox cbp-l-caption-buttonRight btn green btn-sm block"                                               data-title="{{ result.seance.film.title }}">                                                <i class="fa fa-play fa-fw"></i> Bande d'annonce </a>                                        </div>                                    </div>                                </div>                            </div>                        {% endfor %}                        <div class="col-sm-9">                            <h3 class="page-header caption font-yellow-casablanca sbold">Commentaires</h3>                        </div>                        <form role="form">                            <div class="form-body">                                <div class="col-md-9">                                    <div class="form-group">                                        <label>Nom</label>                                        <div class="input-icon ">                                            <i class="fa fa-user"></i>                                            <input type="text" class="form-control"                                                   placeholder="Nom ou nom@mail.fr">                                        </div>                                    </div>                                </div>                                <div class="col-md-9">                                    <div class="form-group">                                        <div class="input-icon ">                                            <i class="fa fa-list-alt"></i>                                                        <textarea name="" class="form-control" id=""                                                                  rows="3"></textarea>                                        </div>                                    </div>                                </div>                            </div>                            <div class="col-md-9">                                <div class="form-actions margin-bottom-20">                                    <button class="btn blue" type="submit">Enregistrer</button>                                    <button class="btn default" type="button">Annuler</button>                                </div>                            </div>                        </form>                        {% else %}                        <div class="col-sm-12">                            <h3 class="page-title page-header">                                Séance                                <small>Erreur</small>                            </h3>                        </div>                        <div class="col-sm-12">                            <div class="note note-danger">                                <h4 class="block"><b>Oups</b>, on n'a pas pu récupérer le film démande</h4>                                <p> N'hésitez pas à signaler cette erreur en nous laissant un message par <a                                            href="mailto:yann-dev@matieschill.fr"></a>ici </p>                            </div>                        </div>                    </div>                </div>                {% endif %}            </div>        </div>    </div>{% endblock %}    {% block javascripts %}        {{ parent() }}        {% javascripts        "bundles/mc/themes/global/plugins/datatables/datatables.min.js"        'bundles/mc/js/jquery.rateyo.min.js'        'bundles/mc/themes/global/plugins/cubeportfolio/js/jquery.cubeportfolio.min.js'        'bundles/mc/themes/pages/scripts/portfolio-1.js'        'bundles/mc/js/dataTable.js'        'bundles/mc/js/applications.js' %}        {#  #}        <script src="{{ asset_url }}"></script>        {% endjavascripts %}        <script>            $(function () {                $("#pressRating").rateYo({                    rating: parseFloat($('#pressRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });                $("#userRating").rateYo({                    rating: parseFloat($('#userRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });            });        </script>    {% endblock %}