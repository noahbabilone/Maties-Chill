{% extends "MCBundle::layout.html.twig" %}{% block title %}    Films - {{ parent() }}{% endblock %}{% block body_mc %}    <div class="row">        {% if result %}            {% set film = result.movie %}            {#{{ dump(film) }}#}            <div class="col-sm-12">                {#<ol class="breadcrumb">#}                {#<li><a href="#">Accueil</a></li>#}                {#<li><a href="#">Film</a></li>#}                {#<li class="active">{{ film.title }}</li>#}                {#</ol>#}            </div>            <div class="col-sm-12">                <h2>{{ film.title }}</h2>            </div>            <div class="col-sm-12">                <div class="">                    <div class="caption clearfix">                        {% if film.poster is defined and film.poster %}                            <img src="{{ film.poster.href }}" width="180" height="264"                                 class="thumbnail pull-left margin-right"                                 alt="{{ film.poster.name }}">                        {% else %}                            <img src="../../../uploads/images/400x300.png" width="120" height="174"                                 class="thumbnail pull-left margin-right"                                 alt="{{ film.originalTitle }}">                        {% endif %}                        <ul class="list-unstyled ">                            {% if film.release is defined and film.release %}                                <li><b>Date de sortie: </b>{{ film.release.releaseDate | date("d F Y") }}</li>                            {% endif %}                            {% if film.genre is defined and film.genre %}                                <li><b>Genre(s): </b>                                    <ul class="list-inline">                                        {% for genre in film.genre %}                                            {{ genre.code }}                                        {% endfor %}                                    </ul>                                </li>                            {% endif %}                            {% if film.runtime is defined and film.runtime %}                                <li><b>Durée: </b>{{ film.runtime }}</li>                            {% endif %}                            {% if film.castingShort.directors is defined and film.castingShort.directors %}                                <li><b>Producteurs: </b>{{ film.castingShort.directors }}</li>                            {% endif %}                            {% if film.castingShort.actors is defined and film.castingShort.actors %}                                <li><b>Acteurs: </b>{{ film.castingShort.actors }}</li>                            {% endif %}                            {% if film.statistics.pressRating is defined and film.statistics.pressRating %}                                <li><b>Notes Presse: </b>{{ film.statistics.pressRating }}</li>                            {% endif %}                            {% if film.statistics.actors is defined and film.statistics.userRating %}                                <li><b>Notes Spetacteurs: </b>{{ film.statistics.userRating }}</li>                            {% endif %}                        </ul>                    </div>                </div>            </div>            {% if film.synopsis is defined and film.synopsis %}                <div class="col-sm-12">                    <p>{{ film.synopsis }}</p>                </div>            {% endif %}            {% if film.trailer is defined and film.trailer %}                <div class="col-sm-12">                    <p>{{ film.trailer.href }}</p>                </div>            {% endif %}            {% if film.media is defined and film.media %}                <div class="col-sm-12">                    <div class="row">                        {% for img in film.media %}                            <div class="col-sm-2">                                <img src="{{ img.thumbnail.href }}" class="thumbnail" alt=""                                     title="{{ film.title }}"                                     width="110" height="144">                            </div>                        {% endfor %}                    </div>                </div>            {% endif %}        {% else %}            <div class="col-md-3 hero-feature">                {#Pas de résultat pour le film {{ motsCles }}#}            </div>        {% endif %}    </div>{% endblock %}