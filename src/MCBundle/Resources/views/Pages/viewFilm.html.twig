{% extends "MCBundle::main.html.twig" %}{% block title %}    Films - {{ parent() }}{% endblock %}{% block stylesheets %}    {{ parent() }}    {% stylesheets    'bundles/mc/css/jquery.rateyo.css'    'https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css'    'bundles/mc/css/card.css'    'bundles/mc/themes/global/plugins/cubeportfolio/css/cubeportfolio.css'    'bundles/mc/themes/pages/css/portfolio.min.css'    filter='cssrewrite' %}    <link rel="stylesheet" href="{{ asset_url }}"/>    {% endstylesheets %}    <style type="text/css">    </style>{% endblock %}{% block body_mc %}    <div class="page-container page-mc">        <div class="page-content">            <div class="page-bar">                <div class="row">                    <div class="col-sm-12">                        <ul class="page-breadcrumb">                            <li>                                <a href="{{ path('home_page') }}">Accueil</a>                                <i class="fa fa-circle"></i>                            </li>                            <li>                                <a href="{{ path('film_home') }}">Films</a>                                <i class="fa fa-circle"></i>                            </li>                            {% if film is defined %}                                <li>                                    <span>{{ film.title | capitalize }}</span>                                </li>                            {% endif %}                        </ul>                    </div>                </div>            </div>            <!-- END PAGE BAR -->            <!-- BEGIN PAGE TITLE-->            <div class="row">                <div class="col-sm-2">                    {% include("MCBundle:Includes:submenu.html.twig") %}                </div>                {% if film is defined %}                    <div class="col-sm-10">                        <div class="row">                            <div class="col-sm-12">                                <h3 class="page-title page-header">                                    Film                                    <small> {{ film.title | capitalize }} </small>                                </h3>                            </div>                            <div class="col-sm-9">                                {% if film.title is defined %}                                    <h3 class="page-title font-green sbold uppercase">{{ film.title }}</h3>                                {% endif %}                                {#<h4 class="caption font-yellow-casablanca sbold "> Infos</h4>#}                                <div class="table-scrollable table-scrollable-borderless">                                    <table class="table table-hover table-light">                                        {% if film.releaseDate is defined and film.releaseDate %}                                            <tr>                                                <td class="">Date de sortie</td>                                                <td class="">{{ film.releaseDate | date("d F Y") }}</td>                                            </tr>                                        {% endif %}                                        {% if film.runtime is defined and film.runtime %}                                            <tr>                                                <td class="col-sm-2">Durée</td>                                                <td class="col-sm-9">                                                    {{ film.runtime | date("g") }}h {{ film.runtime | date("i") }}min                                                </td>                                            </tr>                                        {% endif %}                                        {% if film.nationality is defined and film.nationality %}                                            <tr>                                                <td class="col-sm-2">Nationalité</td>                                                <td class="col-sm-9">{{ film.nationality | capitalize }}</td>                                            </tr>                                        {% endif %}                                        {% if film.directors is defined and film.directors %}                                            <tr>                                                <td class="col-sm-2">Réalisateur</td>                                                <td class="col-sm-9">{{ film.directors }}</td>                                            </tr>                                        {% endif %}                                        {% if film.actors is defined and film.actors %}                                            <tr>                                                <td class="col-sm-2">Avec</td>                                                <td class="col-sm-9">{{ film.actors }}</td>                                            </tr>                                        {% endif %}                                        {% if film.genre is defined and film.genre %}                                            <tr>                                                <td class="col-sm-2">Genre(s)</td>                                                <td class="col-sm-9">                                                    {% for genre in film.genre %}                                                        {{ genre.title }}                                                        {% if loop.index < film.genre |length %}/{% endif %}                                                    {% endfor %}                                                </td>                                            </tr>                                        {% endif %}                                        {% if film.pressRating is defined and film.pressRating %}                                            <tr>                                                <td class="col-sm-2">Notes Presses</td>                                                <td class="col-sm-9">                                                    <span id="pressRating"                                                          data-rating="{{ film.pressRating | round(1, 'floor') }}">{{ film.pressRating | round(1, 'floor') }}</span>                                                </td>                                            </tr>                                            {#<input class="kv-svg rating-loading"#}                                            {#value="{{ film.pressRating | round(1, 'floor') }}"#}                                            {#data-size="xs" title="Notes Presses">#}                                        {% endif %}                                        {% if film.userRating is defined and film.userRating %}                                            <tr>                                                <td class="col-sm-2">Notes Spetacteurs</td>                                                <td class="col-sm-9">                                                    <span id="userRating"                                                          data-rating="{{ film.userRating | round(1, 'floor') }}">{{ film.userRating | round(1, 'floor') }}</span>                                                </td>                                            </tr>                                        {% endif %}                                    </table>                                </div>                                {% if film.synopsis is defined %}                                    <h4 class="caption font-yellow-casablanca sbold">Synopsis</h4>                                    <p class="">{{ film.synopsis | capitalize }}</p>                                {% endif %}                                <ul class="list-inline">                                    {% if film.directors is defined and film.directors %}                                        <li>                                            <i class="fa fa-user"></i> {{ film.directors }}                                        </li>                                    {% endif %}                                    {% if film.nationality is defined and film.nationality %}                                        <li>                                            <i class="fa fa-map-marker"></i> {{ film.nationality | upper }}                                        </li>                                    {% endif %}                                    {% if film.releaseDate is defined and film.releaseDate %}                                        <li>                                            <i class="fa fa-calendar"></i> {{ film.releaseDate | date("d F Y") }}                                        </li>                                    {% endif %}                                    {% if sessions is defined %}                                        <li>                                            <i class="fa fa-film"></i> {{ sessions | length }}                                        </li>                                    {% endif %}                                    {% if film.userRating is defined  and film.pressRating is defined %}                                        <li>                                            <i class="fa fa-heart"></i>                                            {% set rating = (film.userRating+ film.pressRating)/2 %}                                            {{ rating | round(1, 'floor') }}                                        </li>                                    {% endif %}                                </ul>                            </div>                            <div class="col-sm-3">                                <div id="js-grid-juicy-projects" class="cbp">                                    <div class="cbp-item graphic">                                        {% if film.poster is defined and film.poster %}                                            <a href="{{ film.poster }}" class="cbp-lightbox">                                                <img src="{{ film.poster }}"                                                     class="img-responsive pic-bordered thumbnail margin-right "                                                     alt=""/>                                            </a>                                        {% else %}                                            <img src="../../../uploads/images/400x300.png"                                                 class="img-responsive pic-bordered"                                                 alt="{{ film.title }}">                                        {% endif %}                                        <a href="http://vimeo.com/14912890"                                           class="cbp-lightbox cbp-l-caption-buttonRight btn green btn-sm btn-block"                                           data-title="{{ film.title }}">                                            <i class="fa fa-play fa-fw"></i> Voir la bande d'annonce </a>                                    </div>                                </div>                            </div>                            {% if sessions is defined %}                                <div class="col-sm-12">                                    {#{{ dump(sessions) }}#}                                    <h3 class="page-header caption font-yellow-casablanca sbold">Séances</h3>                                    <div class="bootstrap-table margin-bottom-20" id="sessions-film">                                        <div class="fixed-table-toolbar"></div>                                        <table id="table-sessions"                                               class="table table-hover"                                               cellspacing="0" width="100%">                                            <thead>                                            <tr>                                                <th>Organisateur</th>                                                <th>Diff</th>                                                <th>Prix</th>                                                <th>Place(s)</th>                                                <th>Participants</th>                                                <th>Ville</th>                                                <th>Date</th>                                                <th>Voir</th>                                            </tr>                                            </thead>                                            <tbody>                                            {% for session in sessions %}                                                <tr>                                                    <td>{{ session.creator.username | capitalize }}</td>                                                    <td>{{ session.typeView | upper }}</td>                                                    <td>{{ session.price }} <i class="fa fa-euro"></i></td>                                                    <td>{{ session.maxPlace }}</td>                                                    <td>{{ session.participant | length }}</td>                                                    <td>{{ session.address.town }}</td>                                                    <td> {{ session.date| date("d F") }} à                                                        {{ session.date| date("H") }}h{{ session.date| date("i") }}</td>                                                    <td><a href="{{ path('session_view', {'slug':session.id}) }}"                                                           class="btn btn-sm green btn-outline filter-submit margin-bottom"><i                                                                    class="fa fa-eye"></i></a></td>                                                </tr>                                            {% endfor %}                                            </tbody>                                        </table>                                    </div>                                </div>                            {% endif %}                        </div>                    </div>                {% endif %}            </div>        </div>    </div>{% endblock %}    {% block javascripts %}        {{ parent() }}        {% javascripts        "bundles/mc/themes/global/plugins/datatables/datatables.min.js"        'bundles/mc/js/jquery.rateyo.min.js'        'bundles/mc/themes/global/plugins/cubeportfolio/js/jquery.cubeportfolio.min.js'        'bundles/mc/themes/pages/scripts/portfolio-1.js'        'bundles/mc/js/dataTable.js' %}        {#  #}        <script src="{{ asset_url }}"></script>        {% endjavascripts %}        <script>            $(function () {                $("#pressRating").rateYo({                    rating: parseFloat($('#pressRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });                $("#userRating").rateYo({                    rating: parseFloat($('#userRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });            });        </script>    {% endblock %}