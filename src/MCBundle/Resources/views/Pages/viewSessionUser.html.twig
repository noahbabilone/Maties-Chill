{% extends "MCBundle::main.html.twig" %}{% block title %}    Films - {{ parent() }}{% endblock %}{% block stylesheets %}    {{ parent() }}    {% stylesheets    'https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css'    'bundles/mc/css/jquery.rateyo.css'    'bundles/mc/css/card.css'    'bundles/mc/themes/global/plugins/cubeportfolio/css/cubeportfolio.css'    'bundles/mc/themes/pages/css/portfolio.min.css'    filter='cssrewrite' %}    <link rel="stylesheet" href="{{ asset_url }}"/>    {% endstylesheets %}{% endblock %}{% block body_mc %}    <div class="page-container page-mc">        <div class="page-content">            <div class="page-bar">                <div class="row">                    <div class="col-sm-12">                        <ul class="page-breadcrumb">                            <li>                                <a href="{{ path('home_page') }}">Accueil</a>                                <i class="fa fa-circle"></i>                            </li>                            <li>                                <a href="{{ path('session_home') }}">Séances</a>                                <i class="fa fa-circle"></i>                            </li>                            {% if session is defined and session %}                                <li>                                    <span>{{ session.film.title | capitalize }}                                        de {{ session.creator.username | capitalize }}</span>                                </li>                            {% endif %}                        </ul>                    </div>                </div>            </div>            <!-- END PAGE BAR -->            <!-- BEGIN PAGE TITLE-->            <div class="row">                <div class="col-sm-2">                    {% include("MCBundle:Includes:submenu.html.twig") %}                </div>                {% if session is defined and session %}                    <div class="col-sm-10">                        <div class="row">                            <div class="col-sm-12">                                <h3 class="page-title page-header">                                    Séance                                    <small> {{ session.film.title | capitalize }} - {{ session.typeView | upper }}                                        - {{ session.creator.username | capitalize }} </small>                                </h3>                            </div>                            <div class="col-sm-9">                                {% if session.film.title is defined %}                                    <h3 class="page-title font-green sbold uppercase">{{ session.film.title }}                                        - {{ session.typeView }}</h3>                                {% endif %}                                <div class="profile">                                    <div class="tabbable-line tabbable-full-width">                                        <ul class="nav nav-tabs">                                            <li class="active">                                                <a href="#seance_info" data-toggle="tab"> Séance </a>                                            </li>                                            <li>                                                <a href="#film_info" data-toggle="tab"> Film </a>                                            </li>                                        </ul>                                        <div class="tab-content">                                            <div class="tab-pane active" id="seance_info">                                                <div class="table-scrollable table-scrollable-borderless">                                                    <table class="table table-hover table-light">                                                        {% if session.creator is defined and session.creator %}                                                            <tr>                                                                <td class="">Proposé(e) par:</td>                                                                <td class="">{{ session.creator.username | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.date is defined and session.date %}                                                            <tr>                                                                <td class="col-sm-2">Durée</td>                                                                <td class="col-sm-9">                                                                    {{ session.date| date("d F") }}                                                                    à {{ session.date| date("H") }}                                                                    h {{ session.date| date("i") }}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.address.town is defined and session.address.town %}                                                            <tr>                                                                <td class="col-sm-2">Ville</td>                                                                <td class="col-sm-9">{{ session.address.town | capitalize }}                                                                    {% if session.address.postCode is defined and session.address.postCode %}                                                                        ({{ session.address.postCode }})                                                                    {% endif %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.directors is defined and session.film.directors %}                                                            <tr>                                                                <td class="col-sm-2">Réalisateur</td>                                                                <td class="col-sm-9">{{ session.film.directors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.price is defined and session.price %}                                                            <tr>                                                                <td class="col-sm-2">Prix</td>                                                                <td class="col-sm-9">                                                                    {% if session.price > 0 %}{{ session.price }}€{% else %}Gratuit{% endif %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.contribution is defined and session.contribution %}                                                            <tr>                                                                <td class="col-sm-2">Avec contribution</td>                                                                <td class="col-sm-9">{{ session.contribution | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.maxPlace is defined and session.maxPlace %}                                                            <tr>                                                                <td class="col-sm-2">Place(s) Rts</td>                                                                <td class="col-sm-9">{{ session.maxPlace }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.participant is defined and session.participant %}                                                            <tr>                                                                <td class="col-sm-2">Participant(s)</td>                                                                <td class="col-sm-9">{{ session.participant | length }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.material is defined and session.material %}                                                            <tr>                                                                <td class="col-sm-2">Autre</td>                                                                <td class="col-sm-9">                                                                    {% for material in session.material %}                                                                        {{ material.title }}                                                                        {% if loop.index < session.material | length %}/{% endif %}                                                                    {% endfor %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.description is defined and session.description %}                                                            <tr>                                                                <td class="col-sm-2">Autre</td>                                                                <td class="col-sm-9">{{ session.description | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                    </table>                                                </div>                                            </div>                                            <div class="tab-pane" id="film_info">                                                <div class="table-scrollable table-scrollable-borderless">                                                    <table class="table table-hover table-light">                                                        {% if session.film.releaseDate is defined and session.film.releaseDate %}                                                            <tr>                                                                <td class="">Date de sortie</td>                                                                <td class="">{{ session.film.releaseDate | date("d F Y") }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.runtime is defined and session.film.runtime %}                                                            <tr>                                                                <td class="col-sm-2">Durée</td>                                                                <td class="col-sm-9">                                                                    {{ session.film.runtime | date("g") }}                                                                    h {{ session.film.runtime | date("i") }}min                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.nationality is defined and session.film.nationality %}                                                            <tr>                                                                <td class="col-sm-2">Nationalité</td>                                                                <td class="col-sm-9">{{ session.film.nationality | capitalize }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.directors is defined and session.film.directors %}                                                            <tr>                                                                <td class="col-sm-2">Réalisateur</td>                                                                <td class="col-sm-9">{{ session.film.directors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.actors is defined and session.film.actors %}                                                            <tr>                                                                <td class="col-sm-2">Avec</td>                                                                <td class="col-sm-9">{{ session.film.actors }}</td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.genre is defined and session.film.genre %}                                                            <tr>                                                                <td class="col-sm-2">Genre(s)</td>                                                                <td class="col-sm-9">                                                                    {% for genre in session.film.genre %}                                                                        {{ genre.title }}                                                                        {% if loop.index < session.film.genre |length %}/{% endif %}                                                                    {% endfor %}                                                                </td>                                                            </tr>                                                        {% endif %}                                                        {% if session.film.pressRating is defined and session.film.pressRating %}                                                            <tr>                                                                <td class="col-sm-2">Notes Presses</td>                                                                <td class="col-sm-9">                                                    <span id="pressRating"                                                          data-rating="{{ session.film.pressRating | round(1, 'floor') }}">{{ session.film.pressRating | round(1, 'floor') }}</span>                                                                </td>                                                            </tr>                                                            {#<input class="kv-svg rating-loading"#}                                                            {#value="{{ session.film.pressRating | round(1, 'floor') }}"#}                                                            {#data-size="xs" title="Notes Presses">#}                                                        {% endif %}                                                        {% if session.film.userRating is defined and session.film.userRating %}                                                            <tr>                                                                <td class="col-sm-2">Notes Spetacteurs</td>                                                                <td class="col-sm-9">                                                    <span id="userRating"                                                          data-rating="{{ session.film.userRating | round(1, 'floor') }}">{{ session.film.userRating | round(1, 'floor') }}</span>                                                                </td>                                                            </tr>                                                        {% endif %}                                                    </table>                                                </div>                                            </div>                                        </div>                                    </div>                                </div>                                {% if session.film.synopsis is defined %}                                    <h3 class="caption font-yellow-casablanca sbold">Synopsis</h3>                                    <p class="">{{ session.film.synopsis | capitalize }}</p>                                {% endif %}                                <ul class="list-inline">                                    {% if session.creator is defined and session.creator %}                                        <li>                                            <i class="fa fa-user"></i> {{ session.creator.username | capitalize }}                                        </li>                                    {% endif %}                                    {% if session.date is defined and session.date %}                                        <li>                                            <i class="fa fa-calendar"></i> {{ session.date | date("d F") }}                                        </li>                                        <li>                                            <i class="fa fa-clock-o"></i> {{ session.date| date("H") }}                                            h{{ session.date| date("i") }}                                        </li>                                    {% endif %}                                    {% if session.address.town is defined and session.address.town %}                                        <li>                                            <i class="fa fa-map-marker"></i>                                            {{ session.address.town }}                                            {% if session.address.postCode is defined and session.address.postCode %}                                                ({{ session.address.postCode }})                                            {% endif %}                                        </li>                                    {% endif %}                                    {% if session.participant is defined and session.participant %}                                        <li>                                            <i class="fa fa-heart"></i>                                            {{ session.participant | length }}                                        </li>                                    {% endif %}                                    {% if session.film.userRating is defined and session.film.pressRating %}                                        <li>                                            <i class="fa fa-star"></i>                                            {% set rating = (session.film.userRating+ session.film.pressRating)/2 %}                                            {{ rating | round(1, 'floor') }}                                        </li>                                    {% endif %}                                    {% if session.address.town is defined and session.address.town %}                                        <li>                                            <i class="fa fa-shopping-cart"></i>                                            {{ session.price }}<i class="fa fa-eur"></i>                                        </li>                                    {% endif %}                                </ul>                            </div>                            <div class="col-sm-3">                                <div id="js-grid-juicy-projects" class="cbp">                                    <div class="cbp-item graphic">                                        {% if session.film.poster is defined and session.film.poster %}                                            <a href="{{ session.film.poster }}" class="cbp-lightbox">                                                <img src="{{ session.film.poster }}"                                                     class="img-responsive pic-bordered thumbnail margin-right "                                                     alt=""/>                                            </a>                                        {% else %}                                            <img src="../../../uploads/images/400x300.png"                                                 class="img-responsive pic-bordered"                                                 alt="{{ session.film.title }}">                                        {% endif %}                                        <div class="btn-group btn-group btn-group-justified">                                            <a href="http://vimeo.com/14912890"                                               class="cbp-lightbox cbp-l-caption-buttonRight btn green-meadow btn-sm "                                               data-title="{{ session.film.title }}">                                                <i class="fa fa-shopping-cart fa-fw"></i> Participer </a>                                            <a href="http://vimeo.com/14912890"                                               class="cbp-lightbox cbp-l-caption-buttonRight btn green btn-sm"                                               data-title="{{ session.film.title }}">                                                <i class="fa fa-play fa-fw"></i> Bande d'annonce </a>                                        </div>                                    </div>                                </div>                            </div>                            <div class="col-sm-12">                                <h3 class="page-header caption font-yellow-casablanca sbold">Commentaires</h3>                            </div>                            <form role="form">                                <div class="form-body">                                    <div class="col-md-9">                                        <div class="form-group">                                            <label>Nom</label>                                            <div class="input-icon ">                                                <i class="fa fa-user"></i>                                                <input type="text" class="form-control"                                                       placeholder="Nom ou nom@mail.fr">                                            </div>                                        </div>                                    </div>                                    <div class="col-md-9">                                        <div class="form-group">                                            <div class="input-icon ">                                                <i class="fa fa-list-alt"></i>                                                        <textarea name="" class="form-control" id=""                                                                  rows="3"></textarea>                                            </div>                                        </div>                                    </div>                                </div>                                <div class="col-md-9">                                    <div class="form-actions margin-bottom-20">                                        <button class="btn blue" type="submit">Enregistrer</button>                                        <button class="btn default" type="button">Annuler</button>                                    </div>                                </div>                            </form>                        </div>                        {#{{ dump(session) }}#}                    </div>                {% endif %}            </div>        </div>    </div>{% endblock %}    {% block javascripts %}        {{ parent() }}        {% javascripts        "bundles/mc/themes/global/plugins/datatables/datatables.min.js"        'bundles/mc/js/jquery.rateyo.min.js'        'bundles/mc/themes/global/plugins/cubeportfolio/js/jquery.cubeportfolio.min.js'        'bundles/mc/themes/pages/scripts/portfolio-1.js'        'bundles/mc/js/dataTable.js' %}        {#  #}        <script src="{{ asset_url }}"></script>        {% endjavascripts %}        <script>            $(function () {                $("#pressRating").rateYo({                    rating: parseFloat($('#pressRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });                $("#userRating").rateYo({                    rating: parseFloat($('#userRating').attr("data-rating")),                    readOnly: true,                    starWidth: "16px",                });            });        </script>    {% endblock %}