{% extends "MCBundle::layout.html.twig" %}

{% block title %}
    Séances - {{ parent() }}
{% endblock %}

{% block body_mc %}

    <div class="row">
        <div class="col-sm-12">
        </div>
        {% if sessions is defined and sessions %}

            <div class="col-sm-2">
                {% include("MCBundle:Includes:menuSession.html.twig") %}
                
            </div>
            <div class="col-sm-10">
                <div class="row">
                    {% for session in sessions %}
                        <div class="col-sm-6 ">
                            <div class="media bs-callout bs-callout-primary ">
                                <div class="media-left">
                                    <a href="#">
                                        {% if session.film.poster is defined and session.film.poster %}
                                            <img class="media-object thumbnail"
                                                 src="{{ session.film.poster }}" height="114" width="84"
                                                 alt="64x64">
                                        {% else %}
                                            <img class="media-object thumbnail"
                                                 src="http://bootstrap-doc.prauds.fr/image/64x64.jpg"
                                                 alt="64x64">
                                        {% endif %}
                                    </a>
                                </div>
                                <div class="media-body">
                                    <h4 class="media-heading ">{{ session.film.title }} ({{ session.typeView }})</h4>
                                    <ul class="list-unstyled">
                                        <li><b>Date:</b> {{ session.date| date("d F Y") }} à
                                            <b>{{ session.date| date("H") }}h{{ session.date| date("i") }}</b>

                                        </li>
                                        <li>
                                            <b>Prix:</b>
                                            {% if session.price > 0 %}{{ session.price }}€{% else %}Gratuit{% endif %}
                                        </li>
                                        <li><b>Ville:</b> {{ session.address.town }}</li>
                                        <li>
                                            <b>Place(s): </b>{{ session.maxPlace }}
                                            <span class="pull-right">
                                            <a href="#" class="btn btn-success btn-xs"> Participer <i
                                                        class="glyphicon glyphicon-shopping-cart"></i></a>
                                            <a href="#" class="btn btn-default btn-xs"> Voir Séance <i
                                                        class="glyphicon glyphicon-eye-open"></i></a>
                                                </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                    <div class="col-sm-12">
                        <div class="navigation">
                            {% if sessions %}
                                {{ knp_pagination_render(sessions) }}
                            {% endif %}

                        </div>
                    </div>

                </div>
            </div>
        {% endif %}

    </div>


{% endblock %}
