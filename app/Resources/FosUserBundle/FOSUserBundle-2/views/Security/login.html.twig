{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row col-sm-offset-1">
        <div class="col-sm-5">
            <h2>Connexion</h2>

            <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="username"
                               class="control-label">{{ 'security.login.username'|trans }}</label>
                    </div>
                    <div class="col-sm-12">
                        <input type="text" id="username" name="_username"
                               value="{{ last_username }}" class="form-control" required="required"
                               placeholder="{{ 'security.login.username'|trans }}"/>
                    </div>

                    <div class="col-sm-12">
                        <label for="password"
                               class="control-label">{{ 'security.login.password'|trans }}</label>

                    </div>
                    <div class="col-sm-12">

                        <input type="password" class="form-control" id="password" name="_password"
                               required="required"
                               placeholder="{{ 'security.login.password'|trans }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me"
                                       value="on"/>{{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-6 text-right">
                        <p><a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a></p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="submit" id="_submit" name="_submit" class="btn btn-default"
                               value="{{ 'security.login.submit'|trans }}"/>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-sm-6 col-sm-offset-1">
            <h3>Pas encore isncrit ?</h3>

            <p class="lead"><span>Nous vous invitons à vous inscrire afin de passer participer au séance.</span></p>

            <p>
                <a href="{{ path ('fos_user_registration_register') }}" class="btn btn-primary btn-sm"> Inscription</a>
            </p>
        </div>


    </div>



{% endblock fos_user_content %}
