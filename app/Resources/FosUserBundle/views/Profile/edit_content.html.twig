{% trans_default_domain 'FOSUserBundle' %}
<div class="page-content">
    <div class="page-bar">
        <div class="row">
            <div class="col-sm-12">
                <ul class="page-breadcrumb">
                    <li>
                        <a href="{{ path('home_page') }}">Accueil</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_profile_show') }}">Profile</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li><span>Edit</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            {% include("MCBundle:Includes:submenu.session.html.twig") %}
        </div>
        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="page-title page-header">Profile <small> Edit</small></h2>
                </div>
                <div class="col-sm-4">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}
                    <div class="form-group">
                        <div class="col-sm-10">
                            {{ form_label(form.username, 'form.username'|trans , {'label_attr': {'class':'control-label'}}) }}

                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.username,{ 'attr': {'class': "form-control", 'placeholder': 'form.username'|trans } }) }}

                        </div>
                        <div class="col-sm-10">
                            {{ form_label(form.email, 'form.email'|trans , {'label_attr': {'class':'control-label'}}) }}

                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.email,{ 'attr': {'class': "form-control",  'placeholder': 'form.email'|trans } }) }}
                        </div>
                        <div class="col-sm-10">
                            {{ form_label(form.current_password, 'form.current_password'|trans , {'label_attr': {'class':'control-label'}}) }}

                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.current_password,{ 'attr': {'class': "form-control",  'placeholder': 'form.current_password'|trans } }) }}
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="submit" id="_submit" name="_submit" class="btn btn-success"
                                   value="{{ 'profile.edit.submit'|trans }}"/>
                        </div>
                    </div>
                    {{ form_rest(form) }}

                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

