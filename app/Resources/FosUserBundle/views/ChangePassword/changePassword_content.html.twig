{% trans_default_domain 'FOSUserBundle' %}
<div class="page-content">
    <div class="page-bar">
        <div class="row">
            <div class="col-sm-12">
                <ul class="page-breadcrumb">
                    <li>
                        <a href="{{ path('home_page') }}">Accueil</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_profile_show') }}">Profile</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li><span>Mot de passe</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            {% include("MCBundle:Includes:submenu.seance.html.twig") %}
        </div>
        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="page-title page-header">Profile
                        <small> Récupération du mot de passe</small>
                    </h2>
                </div>
                <div class="col-sm-5">
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
                    {#{{ form_widget(form) }}#}
                    <div class="form-group">
                        <div class="col-sm-10">
                            {{ form_label(form.current_password, 'form.current_password' |trans  , {'label_attr': {'class':'control-label'}}) }}

                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.current_password,{ 'attr': {'class': "form-control",'placeholder': 'form.current_password'|trans , 'autocomplete':'off'  } }) }}
                        </div>

                        <div class="col-sm-10">
                            {{ form_label(form.plainPassword.first, 'form.password' |trans  , {'label_attr': {'class':'control-label'}}) }}

                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.plainPassword.first,{ 'attr': {'class': "form-control",'placeholder': 'form.password'|trans , 'autocomplete':'off'  } }) }}
                        </div>

                        <div class="col-sm-10">
                            {{ form_label(form.plainPassword.second, 'form.password_confirmation' |trans  , {'label_attr': {'class':'control-label'}}) }}
                        </div>
                        <div class="col-sm-12">
                            {{ form_widget(form.plainPassword.second,{ 'attr': {'class': "form-control",'placeholder': 'form.password_confirmation'|trans , 'autocomplete':'off'} }) }}
                        </div>


                    </div>


                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="submit" id="_submit" name="_submit" class="btn btn-success"
                                   value="{{ 'change_password.submit'|trans }}"/>
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
</div>
